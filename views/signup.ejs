
      <div class="col-s12" id="signup_title">
       
        <h1 class="white-text text-lighten-2">Sign Up</h1>
        <% if(message.length > 0){%>
        <div class="alert alert-danger">
          <%=message%>
          </div>
      <% } %>
      
      </div>

    
  
  
  
  <div class ="container" id="sign_up">
